<Page x:Class="WpfAppAbit2.Resourses.AbitAddView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppAbit2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AbitAddView">
    <Style x:Key="AddAbit"
       TargetType="{x:Type Window}">
        <Setter Property="SnapsToDevicePixels"
          Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="74,72,0,0" TextWrapping="Wrap" Name ="FirstName" VerticalAlignment="Top" Width="120"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="74,100,0,0" TextWrapping="Wrap" x:Name ="LastName" VerticalAlignment="Top" Width="120"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="74,128,0,0" TextWrapping="Wrap" x:Name ="MiddleName" VerticalAlignment="Top" Width="120"/>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
</Page>
